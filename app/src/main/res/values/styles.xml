<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_bold_text_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/colourGrey</item>
        <item name="android:fontFamily">@font/opensas_bold</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:color">@color/colourGrey</item>
        <item name="android:fontFamily">@font/opensas_light</item>
    </style>

</resources>
